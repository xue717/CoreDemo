@model CoreDemo.Database.Models.ULogin
<script src="~/js/jquery-3.3.1.min.js"></script>
<div class="container-fluid" style="background-color: #6D22DD; height: 500px;position: relative">
    <div class="row">
        <div class="col" style="height: 75px;"></div>

        <div class="w-100"></div>

        <div class="col"></div>
        <div class="col" style="height: 350px; background-color: white;">
            <div class="row">
                <div class="col" style="height: 40px;"></div>

                <div class="w-100"></div>

                <div class="col-1" style="width: 40px;"></div>
                <div class="col-10" style="height: 270px;" text-align:center;>
                    <div class="col">
                        <img asp-append-version="true" src="images/bootstrap-solid.svg" width="30" height="30" class="d-inline-block align-top" alt="">
                        <small class="text-muted" style="font-size: larger">CoreDemo</small>

                    </div>
                    <div class="w-100"></div><br />
                    <div class="col">
                        <h4><b>注册</b></h4>
                    </div>
                    <div class="w-100"></div>
                    <form asp-action="SignUp">
                        <div class="col" style="width: 100%">

                            <input type="text" asp-for="Name" id="username" class="form-control" placeholder="账号" style="width: 100%; display: block; margin-left: auto; margin-right: auto;">
                            <br />
                            <input type="text" asp-for="Password" class="form-control" placeholder="密码" style="width: 100%; display: block; margin-left: auto; margin-right: auto;" />

                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary" style="float: right;">下一步</button>
                    </form>
                </div>
                <div class="col-1" style="width: 40px;"></div>

                <div class="w-100"></div>

                <div class="col" style="height: 40px;"></div>
            </div>
        </div>
        <div class="col"></div>

        <div class="w-100"></div>

        <div class="col" style="height: 75px;"></div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        var Ask = 0;
        $("#username").click(function() {
            Ask = 1;
        });

        $("#username").on('blur', function () {
            if (Ask == 1) {
                var name = $("#username").val();
                if (name != "") {
                    $.ajax({
                        type: "POST",
                        url: '/Login/SignUpName',
                        data: { Name: name },
                        success: function (data) {
                            alert(data);
                        },
                        error: function (data) {
                            console.log(data);
                        }
                    });
                } else {
                    alert("请输入正确的账号");
                }

                Ask = 0;
            }
        });
    });
</script>