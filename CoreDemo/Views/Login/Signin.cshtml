@model CoreDemo.Database.Models.ULogin
<script src="~/js/jquery-3.3.1.min.js"></script>
<div class="container-fluid" style="background-color: #6D22DD; height: 500px;position: relative">
    <div class="row">
        <div class="col" style="height: 75px;"></div>

        <div class="w-100"></div>

        <div class="col"></div>
        <div class="col" style="height: 350px; background-color: white;">
            <div class="row">
                <div class="col" style="height: 40px;"></div>

                <div class="w-100"></div>

                <div class="col-1" style="width: 40px;"></div>
                <div class="col-10" style="height: 270px;" text-align:center;>
                    <div class="col">
                        <img asp-append-version="true" src="images/bootstrap-solid.svg" width="30" height="30" class="d-inline-block align-top" alt="">
                        <small class="text-muted" style="font-size: larger">CoreDemo</small>

                    </div>
                    <div class="w-100"></div><br />
                    <div class="col">
                        <h4><b>登录</b></h4>
                    </div>
                    <div class="w-100"></div>
                    <form asp-action="Login">
                        <div class="col" style="width: 100%">

                            <input type="text" asp-for="Name" id="username" class="form-control" placeholder="账号" style="width: 100%; display: block; margin-left: auto; margin-right: auto;">
                            <br />
                            <input type="password" asp-for="Password" id="password" class="form-control" placeholder="密码" style="width: 100%; display: block; margin-left: auto; margin-right: auto;" />

                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary" style="float: right;">下一步</button>
                    </form>
                    <br />
                    <br />
                    <a style="float: right;font-size: small" href="/Login/GoSignUp">立即注册</a>
                </div>
                <div class="col-1" style="width: 40px;"></div>

                <div class="w-100"></div>

                <div class="col" style="height: 40px;"></div>

            </div>
        </div>
        <div class="col"></div>

        <div class="w-100"></div>

        <div class="col" style="height: 75px;"></div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            var xx = getUrlParam('username');
            $('#username').val(xx);
            $('#password').val("");
        });

        function getUrlParam(name) {
            var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)"); //构造一个含有目标参数的正则表达式对象
            var r = window.location.search.substr(1).match(reg);  //匹配目标参数
            if (r != null) return decodeURI(r[2]); return null; //返回参数值
        }
    });
</script>